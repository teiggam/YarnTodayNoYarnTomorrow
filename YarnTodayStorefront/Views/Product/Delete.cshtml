@model Product
    <div style="padding-left: 25%; padding-right: 25%">

        <h1>Delete @Model.Name</h1>

        <p>Are you sure you want to delete this product from the database?</p>
        <form method="post">
            <input type="hidden" value="@Model.Id" name="Id" />
            <input type="submit" value="DESTROY @Model.Color.ToUpper() @Model.Name.ToUpper()" /><br />
        </form>
        <br />
        <a asp-action="Index" asp-controller="Product"><input type="submit" value="No! Do NOT destroy that yarn." /></a>
    </div>